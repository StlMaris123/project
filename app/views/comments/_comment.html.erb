<li>
<%= comment.body %>
<small>Submitted <%= time_ago_in_words(comment.created_at) %></small>
<%= form_for [comment, Comment.new] do |f| %>
    <%= f.text_area :body, placeholder: "Add your answer", class: 'form-control' %><br/>
    <%= f.submit "Reply", class: 'btn btn-primary' %>
    <% end %>
    <ul>
        <%= render partial: 'comments/comment', collection: comment.comments %>
    </ul>
</li>
