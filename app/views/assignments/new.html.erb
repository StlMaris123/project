<% provide(:title, 'Assignement') %>
<h1>New Assignement</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@assignment) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :link %>
      <%= f.text_field :link, placeholder: 'e.g http://www.example.com' %>

      <%= f.label :start_date, 'Start Date' %>
      <%= f.datetime_select :start_date, default: Time.zone.now %>

      <%= f.label :due_date, 'Due Date' %>
      <%= f.datetime_select :due_date %>

      <%= f.submit 'create assign', class: 'btn btn-primary btn-sm' %>
    <% end %>

  </div>
</div>
